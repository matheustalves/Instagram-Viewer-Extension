{
    "name": "Instagram Viewer",
    "version": "1.0",
    "description": "View Instagram content without an account",
    "page_action": {
      "default_icon": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["*://*.instagram.com/*"],
        "js": ["run.js"]
      }
    ],
    "manifest_version": 2
  }
  